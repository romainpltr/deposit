{% set btnSize = {
        'xs': "px-2.5 py-1.5 text-xs",
        'sm': "px-3 py-2 text-sm",
        'md': "px-4 py-2 text-sm",
        'lg': "px-4 py-2 text-base",
        'xl': "px-6 py-3 text-base",
    }
%}

{% set btnColor = {
    'primary': 'text-white bg-indigo-600 hover:bg-indigo-700',
    'secondary': 'text-indigo-700 bg-indigo-100 hover:bg-indigo-200',
    'danger': 'text-red-700 bg-red-100 hover:bg-red-200',
    'success': '',
    'warning': ''
} %}


{% if type is defined %}
    {% if type == "submit" %}
        <button type="submit" class="inline-flex items-center {% if size is defined %} {{ btnSize[size] }} {% else %} {{ btnSize['md'] }} {% endif %} border border-transparent font-medium {% if rounded is defined %} rounded-full {% else %} rounded {% endif%} shadow-sm {% if color is defined %} {{ btnColor[color] }} {% else %} {{ btnColor['primary'] }} {% endif %} focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            {% block btnContent %}
            {% endblock %}
        </button>
    {% elseif type == "a" %}
        <a href="{{ href }}" class="inline-flex items-center {% if size is defined %} {{ btnSize[size] }} {% else %} {{ btnSize['md'] }} {% endif %} border border-transparent font-medium {% if rounded is defined %} rounded-full {% else %} rounded {% endif%} shadow-sm {% if color is defined %} {{ btnColor[color] }} {% else %} {{ btnColor['primary'] }} {% endif %} focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            {% block linkContent %}
            {% endblock %}
        </a>
    {% endif %}
{% endif %}