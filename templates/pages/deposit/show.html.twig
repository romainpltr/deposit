{% extends 'base.html.twig' %}

{% block title %}Deposit{% endblock %}

{% block body %}
    <h1>Deposit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ deposit.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ deposit.name }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ deposit.status ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('deposit_edit', {'id': deposit.id}) }}">edit</a>

{% endblock %}
